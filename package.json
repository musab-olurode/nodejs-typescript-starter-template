{
	"name": "nodejs-typescript-starter-template",
	"version": "0.0.1",
	"description": "Nodejs typescript starter template",
	"main": "dist/server.js",
	"typings": "src/@types/*.d.ts",
	"repository": "https://github.com/musab-olurode/nodejs-starter-template.git",
	"scripts": {
		"test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"prod": "node -r dotenv/config --es-module-specifier-resolution=node dist/server.js",
		"start": "node -r dotenv/config --es-module-specifier-resolution=node dist/server.js",
		"dev": "cross-env NODE_ENV=development nodemon -r dotenv/config src/server.ts",
		"build": "tsc -p ."
	},
	"author": "Mus'ab Olurode",
	"license": "ISC",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"colors": "^1.4.0",
