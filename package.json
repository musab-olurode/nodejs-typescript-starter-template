		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^10.0.0",
		"eslint": "^7.30.0",
		"express": "^4.17.1",
		"express-fileupload": "^1.2.1",
		"express-mongo-sanitize": "^1.3.2",
		"express-rate-limit": "^5.1.3",
		"helmet": "^4.1.1",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^8.5.1",
		"moment": "^2.29.1",
		"mongoose": "^5.13.2",
		"morgan": "^1.10.0",
		"nodemailer": "^6.6.3",
		"validatorjs": "^3.22.1",
		"winston": "^3.3.3",
		"xss-clean": "^0.1.1"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/colors": "^1.2.1",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-fileupload": "^1.1.7",
		"@types/express-mongo-sanitize": "^2.1.0",
		"@types/express-rate-limit": "^5.1.3",
		"@types/hpp": "^0.2.2",
		"@types/jsonwebtoken": "^8.5.6",
		"@types/morgan": "^1.9.3",
		"@types/node": "^16.11.9",
		"@types/nodemailer": "^6.4.4",
		"@types/validatorjs": "^3.15.0",
		"jest": "^27.0.6",
		"nodemon": "^2.0.12",
		"supertest": "^6.1.3",
